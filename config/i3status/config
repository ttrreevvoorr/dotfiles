general {
  output_format = "i3bar"
  colors = true
  interval = 1
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
  #format_up = "W: (%quality at %essid) %ip"
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

battery all {
  #format = "%status %percentage %remaining"
  format = "%status %percentage"
}


